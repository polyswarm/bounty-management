{
  "name": "bounty-management",
  "description": "Tool to post and manage bounties on the PolySwarm Marketplace running on Ethereum.",
  "authors": "Rob Lathrop <rl@polyswarm.io>",
  "version": "0.2.0",
  "private": true,
  "license": "MIT",
  "main": "src/electron.js",
  "keywords": [
    "blockchain",
    "decentralized",
    "infosec",
    "antivirus"
  ],
  "dependencies": {
    "bignumber.js": "^6.0.0",
    "electron-compile": "^6.4.2",
    "electron-devtools-installer": "^2.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "mv": "^2.1.1",
    "ps-node": "^0.1.6",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-transition-group": "^2.3.1",
    "uuid": "^3.2.1",
    "unzip": "^0.1.11"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "git add"
    ]
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "csslint": "^1.0.5",
    "deasync": "^0.1.12",
    "electron-forge": "^5.1.1",
    "electron-prebuilt-compile": "1.8.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.18.1",
    "eslint-config-airbnb": "^15",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsx-a11y": "^5",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-react-perf": "^2.0.8",
    "expect": "^22.4.0",
    "expect-enzyme": "^1.3.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "jest-fetch-mock": "^1.4.2",
    "lint-staged": "^7.0.0",
    "npm-run-all": "^4.1.2",
    "react-scripts": "1.1.1",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "tar": "^4.4.1"
  },
  "scripts": {
    "precommit": "lint-staged",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p daemon-extract electron-start",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "daemon-extract": "node .buildDaemon.js",
    "electron-start": "electron-forge start",
    "electron-package": "electron-forge package",
    "electron-make": "electron-forge make",
    "electron-publish": "electron-forge publish",
    "electron-lint": "eslint --cache --color --ext .jsx,.js src"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn",
        "afterCopy": [
          "./.extractDaemon.js"
        ]
      },
      "electronWinstallerConfig": {
        "name": "bounty_management"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "polyswarm",
        "name": "bounty-management"
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "bountymanagement"
      }
    }
  }
}
